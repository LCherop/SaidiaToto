<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FractureActivity">
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/frinst_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_below="@+id/toolbar"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/frinst_cctitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Common Causes"
                android:layout_below="@+id/frinst_title"
                android:textSize="20sp"

                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/frurncommonCauses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_below="@+id/frinst_cctitle"
                android:textColor="@color/black"
                android:text="Common causes"
                android:paddingBottom="10dp"
                />
            <TextView
                android:id="@+id/frinst_smtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signs and Symptoms"
                android:layout_below="@+id/frurncommonCauses"
                android:textSize="20sp"

                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/frurnsandm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/frinst_smtitle"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="Signs and Symptoms"
                android:paddingBottom="10dp"
                />
            <TextView
                android:id="@+id/frinst_stitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Common Causes"
                android:layout_below="@+id/frurnsandm"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/frurnsteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frinst_stitle"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="Steps to follow:"
                android:paddingBottom="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/frurninstructionImage"
                android:layout_below="@id/frurnsteps"
                android:src="@mipmap/frac_1"
                />
            <TextView
                android:id="@+id/frinst_mititle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Information"
                android:layout_below="@+id/frurninstructionImage"
                android:textSize="20sp"

                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/frmoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frinst_mititle"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="MoreInfo"
                android:paddingBottom="10dp"
                />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>